<%= form_for @lease do |f| %>

  <div class="form-group">
    <%= f.label :tenant_id %>
    <br />
    <%= f.collection_select(:tenant_id, Tenant.all.select { |t| t.leases.count == 0 }, :id, :full_name, { prompt: true }, class: "form-control") %>
  </div>
  
  <div class="form-group">
    <%= f.label :apartment_id %>
    <br />
    <%= f.collection_select(:apartment_id, Apartment.all.select { |a| a.leases.count == 0 }, :id, :unit_name, { prompt: true }, class: "form-control") %>
  </div>
  
  <div class="form-group">
    <%= f.label :start_date %>
    <br />
    <%= f.text_field :start_date, class: "datepicker form-control" %>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.datepicker').datepicker({
          format: 'yyyy-mm-dd'
        });
      });
    </script>
  </div>
  
  <div class="form-group">
    <%= f.label :end_date %>
    <br />
    <%= f.text_field :end_date, class: "datepicker form-control" %>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.datepicker').datepicker({
          format: 'yyyy-mm-dd'
        });
      });
    </script>
  </div>
  
  <div class="form-group">
    <%= f.label :monthly_rent %>
    <br />
    <%= f.text_field :monthly_rent, class: 'form-control' %>
  </div>
  
  <div class="text-center"><%= f.submit "Submit", class: "btn btn-danger"%></div>
<% end %>