<h2 class="text-center">Apartment List</h2>
<div class="row">
    <% @apartments.each do |apt| %>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
            <h3 class="btn btn-<% if apt.leases.first != nil %>success<% else %>warning<% end %>"><%= link_to "#{apt.building} ##{apt.unit}", apartment_path(apt), class: "btn btn-default btn-lg" %></h3>
        </div>
    <% end %>
</div>